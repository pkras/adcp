{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/3.0.0-beta.4/sponsored-intelligence/si-terminate-session-request.json",
  "title": "SI Terminate Session Request",
  "description": "Request to terminate an SI session",
  "type": "object",
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Session identifier to terminate"
    },
    "reason": {
      "type": "string",
      "enum": ["handoff_transaction", "handoff_complete", "user_exit", "session_timeout", "host_terminated"],
      "description": "Reason for termination"
    },
    "termination_context": {
      "type": "object",
      "description": "Context for the termination",
      "properties": {
        "summary": {
          "type": "string",
          "description": "Summary of the conversation"
        },
        "transaction_intent": {
          "type": "object",
          "description": "For handoff_transaction - what user wants to buy",
          "properties": {
            "action": {
              "type": "string",
              "enum": ["purchase", "subscribe"]
            },
            "product": {
              "type": "object",
              "description": "Product/service details"
            }
          },
          "additionalProperties": true
        },
        "cause": {
          "type": "string",
          "description": "For host_terminated - why host ended session"
        }
      },
      "additionalProperties": true
    },
    "ext": {
      "$ref": "/schemas/3.0.0-beta.4/core/ext.json"
    }
  },
  "required": ["session_id", "reason"],
  "additionalProperties": true
}
