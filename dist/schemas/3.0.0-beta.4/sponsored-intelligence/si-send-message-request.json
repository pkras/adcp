{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/3.0.0-beta.4/sponsored-intelligence/si-send-message-request.json",
  "title": "SI Send Message Request",
  "description": "Send a message to the brand agent within an active session",
  "type": "object",
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Active session identifier"
    },
    "message": {
      "type": "string",
      "description": "User's message to the brand agent"
    },
    "action_response": {
      "type": "object",
      "description": "Response to a previous action_button (e.g., user clicked checkout)",
      "properties": {
        "action": {
          "type": "string",
          "description": "The action that was triggered"
        },
        "payload": {
          "type": "object",
          "description": "Action-specific response data"
        }
      },
      "additionalProperties": true
    },
    "ext": {
      "$ref": "/schemas/3.0.0-beta.4/core/ext.json"
    }
  },
  "required": ["session_id"],
  "anyOf": [
    { "required": ["message"] },
    { "required": ["action_response"] }
  ],
  "additionalProperties": true
}
